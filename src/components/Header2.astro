---
const currentPath = Astro.url.pathname.replace(/\/$/, "");
const isActive = (path: string) => currentPath === path.replace(/\/$/, "");
---

<style>
  .tp-main-menu ul li a:hover,
  .tp-main-menu ul li a.active-link {
    color: #ff5f15 !important;
  }
</style>

<header class="tp-header-height">
  <div class="tp-hader-area header-transparent tp-bg-common-white">
    <div
      class="tp-header-top tp-header-top-spacing tp-bg-theme-primary d-none d-lg-block"
    >
      <div class="container container-1690">
        <div class="row">
          <div class="col-lg-7">
            <div class="tp-header-top-info">
              <ul>
                <li>
                  <a
                    href="https://www.google.com/maps/@41.6758525,-86.2531698,18.17z"
                    target="_blank"
                  >
                    <!-- map svg -->
                    27 Sondanella, Eden walk, Eden
                  </a>
                </li>
                <li><span class="tp-border"></span></li>
                <li>
                  <a href="mailto:hello@contact.com" target="_blank">
                    <!-- email svg -->
                    hello@contact.com
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="col-lg-5">
            <div
              class="tp-header-top-right d-flex align-items-center justify-content-end"
            >
              <div class="tp-header-top-call">
                <a
                  href="tel:(+12)800222000"
                  class="tp-text-common-white hover-text-secondary d-flex gap-2 align-items-center"
                >
                  <!-- call svg -->
                  (+12) 800 222 000
                </a>
              </div>
              <span class="tp-header-top-right-border"></span>
              <div class="tp-header-top-lang p-relative d-inline-block">
                <span
                  class="tp-header-top-selected-lang fs-14 tp-text-common-white pr-15 p-relative"
                  >ENG</span
                >
                <ul class="tp-header-top-lang-list">
                  <li>Spanish</li>
                  <li>English</li>
                  <li>Canada</li>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div
      id="header-sticky"
      class="tp-header-bottom tp-header-lg-space p-relative"
    >
      <div class="container container-1690">
        <div class="row align-items-center">
          <div class="col-xl-2 col-sm-3 col-5">
            <div class="tp-header-logo">
              <a href="/">
                <img
                  data-width="168"
                  src="assets/img/logo/logo-black.png"
                  alt="Logo"
                />
              </a>
            </div>
          </div>

          <div class="col-xl-10 col-sm-9 col-7">
            <div
              class="d-flex align-items-center justify-content-end justify-content-xxl-between"
            >
              <div class="tp-main-menu d-none d-xl-inline-block mr-20">
                <nav class="tp-mobile-menu-active">
                  <ul>
                    <li class="p-inherit">
                      <a href="/" class={isActive("/") ? "active-link" : ""}
                        >Home</a
                      >
                    </li>
                    <li class="p-inherit">
                      <a
                        href="/about"
                        class={isActive("/about") ? "active-link" : ""}>About</a
                      >
                    </li>
                    <li class="p-inherit">
                      <a
                        href="/features"
                        class={isActive("/features") ? "active-link" : ""}
                        >Features</a
                      >
                    </li>
                    <li class="p-inherit">
                      <a
                        href="/certification"
                        class={isActive("/certification") ? "active-link" : ""}
                        >Certification</a
                      >
                    </li>
                    <li class="p-inherit">
                      <a
                        href="/industriesweserve"
                        class={isActive("/industriesweserve")
                          ? "active-link"
                          : ""}>Industries We Serve</a
                      >
                    </li>
                    <li class="p-inherit">
                      <a
                        href="/articles"
                        class={isActive("/articles") ? "active-link" : ""}
                        >Blogs</a
                      >
                    </li>
                    <li>
                      <a
                        href="/demo"
                        class={isActive("/demo") ? "active-link" : ""}>Demo</a
                      >
                    </li>
                  </ul>
                </nav>
              </div>

              <div
                class="tp-header-contact d-flex align-items-center justify-content-end"
              >
                <div class="tp-header-search">
                  <button class="tp-search-click">
                    <!-- search svg -->
                  </button>
                </div>

                <div class="tp-header-btn ml-30 d-none d-md-block">
                  <a
                    href="/contact"
                    class="tp-btn-lg d-inline-block lh-0 tp-round-24 fs-16 tp-bg-theme-secondary ls-0 tp-btn-switch-animation tp-text-theme-primary fw-500"
                  >
                    <span
                      class="d-flex align-items-center justify-content-center"
                    >
                      <span class="btn-text">Contact Us</span>
                      <span class="btn-icon"
                        ><i class="fa-sharp fa-regular fa-arrow-right"
                        ></i></span
                      >
                      <span class="btn-icon"
                        ><i class="fa-sharp fa-regular fa-arrow-right"
                        ></i></span
                      >
                    </span>
                  </a>
                </div>

                <div class="tp-header-sidebar-menu ml-10">
                  <button
                    class="tp-menu-bar tp-header-sidebar-btn border-full-1 rounded-circle lh-1"
                  >
                    <!-- sidebar svg -->
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>
