---
import OffCanvas from "../components/OffCanvas.astro";
import Header from "../components/Header.astro";
import Header2 from "../components/Header2.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link
      rel="icon"
      type="image/png"
      href="assets/img/logo/favicon_optimized.png"
    />
    <meta name="generator" content={Astro.generator} />
    <title>Secure Place</title>
    <link rel="stylesheet" href="assets/css/bootstrap.css" />
    <link rel="stylesheet" href="assets/css/animate.css" />
    <link rel="stylesheet" href="assets/css/swiper-bundle.css" />
    <link rel="stylesheet" href="assets/css/slick.css" />
    <link rel="stylesheet" href="assets/css/magnific-popup.css" />
    <link rel="stylesheet" href="assets/css/font-awesome-pro.css" />
    <link rel="stylesheet" href="assets/css/spacing.css" />
    <link rel="stylesheet" href="assets/css/main.css" />
  </head>
  <body class="">
    <!-- Begin magic cursor -->
    <div id="magic-cursor" class="cursor-white-bg">
      <div id="ball"></div>
    </div>
    <!-- End magic cursor -->

    <!-- Preloader Start -->
    <div class="preloader">
      <img src="assets/img/logo/logo6.png" />
    </div>
    <!-- Preloader End -->

    <!-- back to top start -->
    <div class="back-to-top-wrapper">
      <button id="back_to_top" type="button" class="back-to-top-btn">
        <svg
          width="12"
          height="7"
          viewBox="0 0 12 7"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path
            d="M11 6L6 1L1 6"
            stroke="currentColor"
            stroke-width="1.5"
            stroke-linecap="round"
            stroke-linejoin="round"></path>
        </svg>
      </button>
    </div>
    <!-- back to top end -->

    <OffCanvas />
    <Header2 />
    <div id="smooth-wrapper">
      <div id="smooth-content">
        <main>
          <slot />
        </main>
        <Footer />
      </div>
    </div>
    <script is:inline src="assets/js/vendor/jquery.js"></script>
    <script is:inline src="assets/js/bootstrap-bundle.js"></script>
    <script is:inline src="assets/js/plugin.js"></script>
    <script is:inline src="assets/js/swiper-bundle.js"></script>
    <script is:inline src="assets/js/magnific-popup.js"></script>
    <script is:inline src="assets/js/nice-select.js"></script>
    <script is:inline src="assets/js/purecounter.js"></script>
    <script is:inline src="assets/js/wow.js"></script>
    <script is:inline src="assets/js/isotope-pkgd.js"></script>
    <script is:inline src="assets/js/imagesloaded-pkgd.js"></script>
    <script is:inline src="assets/js/ajax-form.js"></script>
    <script is:inline src="assets/js/jarallax.js"></script>
    <script is:inline src="assets/js/parallax.js"></script>
    <script is:inline src="assets/js/parallax-scrool.js"></script>
    <script is:inline src="assets/js/slider-init.js"></script>
    <script is:inline src="assets/js/main.js"></script>
    <script is:inline src="assets/js/tp-cursor.js"></script>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
